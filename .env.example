# Environment configuration for Tovi Backend
# Rename this file to .env and fill in real values

NODE_ENV=development
PORT=8080

# OpenAI configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000
LLM_TOP_P=1
LLM_FREQUENCY_PENALTY=0
LLM_PRESENCE_PENALTY=0

# Firebase service account for Admin SDK
FIREBASE_SERVICE_ACCOUNT_PATH=./src/config/serviceAccountKey.json

# Firebase emulator and web API key (for tests)
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_WEB_API_KEY=test-api-key

# Data Connect configuration
DATA_CONNECT_SERVICE_ID=skillix-db-service
DATA_CONNECT_LOCATION=us-central1
