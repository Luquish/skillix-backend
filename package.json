{
  "name": "tovi-backend",
  "version": "1.0.0",
  "description": "Node.js TypeScript backend for Tovi",
  "main": "dist/app.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --watch src --ext ts --exec ts-node -r tsconfig-paths/register src/app.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest --runInBand",
    "start:test": "NODE_ENV=test ts-node -r tsconfig-paths/register src/app.ts",
    "test:run": "start-server-and-test start:test http://localhost:8080 test",
    "test:e2e": "firebase emulators:exec --project=skillix-db \"pnpm test:run\"",
    "test:e2e:log": "firebase emulators:exec --project=skillix-db \"pnpm test:run\" 2>&1 | tee test-logs/test-$(date +%Y%m%d-%H%M%S).log",
    "test:log": "jest --runInBand --verbose 2>&1 | tee test-logs/jest-$(date +%Y%m%d-%H%M%S).log",
    "test:run:log": "start-server-and-test start:test http://localhost:8080 test:log",
    "test:debug": "jest --runInBand --verbose --detectOpenHandles --forceExit 2>&1 | tee test-logs/debug-$(date +%Y%m%d-%H%M%S).log",
    "simulate": "NODE_ENV=test ts-node -r tsconfig-paths/register tests/cli/simulation.ts",
    "test:next-day": "NODE_ENV=test ts-node -r tsconfig-paths/register tests/cli/generateNextDay.ts",
    "test:migrate": "GOOGLE_APPLICATION_CREDENTIALS=./src/config/serviceAccountKey.json firebase emulators:exec --project=skillix-db \"firebase dataconnect:sql:migrate --force\""
  },
  "keywords": [],
  "author": "",
  "dependencies": {
    "@firebase/data-connect": "^0.1.3",
    "@firebasegen/default-connector": "link:dataconnect-generated/js/default-connector",
    "@firebasegen/tovi-connector": "link:dataconnect-generated/js/tovi-connector",
    "@firebasegen/tovi-connector-connector": "link:dataconnect-generated/js/tovi-connector-connector",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "firebase": "^11.8.1",
    "firebase-admin": "^13.4.0",
    "helmet": "^7.2.0",
    "morgan": "^1.10.0",
    "openai": "^4.104.0",
    "winston": "^3.17.0",
    "zod": "^3.25.50"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^18.19.110",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "axios": "^1.9.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.10",
    "start-server-and-test": "^2.0.12",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "overrides": {
      "@firebasegen/tovi-connector-connector": "link:dataconnect-generated/js/tovi-connector-connector",
      "@firebasegen/default-connector": "link:dataconnect-generated/js/default-connector",
      "@firebasegen/tovi-connector": "link:dataconnect-generated/tovi-connector"
    }
  }
}